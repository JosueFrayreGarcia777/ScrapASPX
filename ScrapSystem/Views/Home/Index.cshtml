<div class="text-center g-3 align-items-center mb-3">
   @if (ViewBag.FolioActivo == null)
    {
        <form asp-controller="Home" asp-action="IniciarRegistro" method="post" style="display:inline;">
            <button type="submit" class="btn btn-success btn-lg">
                Iniciar Registro 
            </button>
