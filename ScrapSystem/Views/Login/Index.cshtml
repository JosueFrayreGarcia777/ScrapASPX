@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = null; 
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ScrapSystem - Login</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="bg-primary">
    <div class="container-fluid vh-100 d-flex align-items-center justify-content-center">
        <div class="row w-100">
            <div class="col-md-6 col-lg-4 mx-auto">
                <div class="card shadow">
                    <div class="card-body p-5">
                        <div class="text-center mb-4">
                            <h2 class="fw-bold">ScrapSystem</h2>
                            <p class="text-muted">Escanee su gafete para ingresar</p>
                        </div>

                        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
                        {
                            <div class="alert alert-danger">
                                @ViewBag.ErrorMessage
                            </div>
                        }

                        <form asp-controller="Login" asp-action="Login" method="post">
                            <div class="mb-4">
                                <label for="codigoBarras" class="form-label">Código de Barras</label>
                                <input type="text"
                                       class="form-control form-control-lg"
                                       id="codigoBarras"
                                       name="codigoBarras"
                                       placeholder="Escanee su gafete aquí"
                                       autofocus
                                       required />
                            </div>

                            <div class="d-grid">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    Iniciar Sesión
                                </button>
                            </div>
                        </form>

                        <div class="mt-4 text-center">
                            <small class="text-muted">
                                Sistema de Control de Rechazos v1.0
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Auto-enviar formulario después de escanear (opcional)
        document.getElementById('codigoBarras').addEventListener('input', function() {
            setTimeout(() => {
                if (this.value.length >= 5) { // Ajustar según longitud de código
                    this.form.submit();
                }
            }, 500);
        });
    </script>
</body>
</html>
