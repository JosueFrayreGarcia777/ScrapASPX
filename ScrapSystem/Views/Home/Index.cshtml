@{
    ViewData["Title"] = "Home Page";
}

@if (!string.IsNullOrEmpty(ViewBag.ConnectionMessage))
{
    <div class="alert @(ViewBag.SearchResult != null ? "alert-success" : "alert-warning") mb-3">
        @ViewBag.ConnectionMessage
    </div>    
}
@if (!string.IsNullOrEmpty(ViewBag.BOMMessage))
{
    <div class=" alert @(ViewBag.BOMResults != null && ((List<ScrapSystem.Models.BOM>)ViewBag.BOMResults).Any() ? "alert-success" : "alert-warning") mb-3">
        @ViewBag.BOMMessage
    </div>

}

<div class="text-center g-3 align-items-center">
    <button class="btn-primary">
        Registrar Bitacora
    </button>
    <button class="btn-primary">
        Editar Bitacora
    </button>
</div>
    <form asp-controller="Home" asp-action="Index" class="form-text"  method="post">
        <div class="mb-3">
            <label for="trwNumber" class="form-label">Escanea etiqueta de rechazo</label>
            <div class="d-flex align-items-center gap-3">
                <input type="text" class="form-control form-control-sm w-25" id="rejectCode" name="rejectCode"
                        value="@((ViewBag.SearchResult as ScrapSystem.Models.rejectCode)?.RejectID ?? "")"
                        placeholder="Ingrese codigo de rechazo" />
                <button type="submit" class="btn btn-primary">Buscar</button>
            </div>
        </div>
           
        <div class="row mb-3">
            <label for="trwNumber" class="col-auto form-label">TRWNumber</label>
            <div class="col-2">
                <input class="form-control" id="trwNumber" type="text"
                        value="@((ViewBag.SearchResult as ScrapSystem.Models.rejectCode)?.trwNumber ?? "")" readonly/>
            </div>
            <label class="form-label col-auto">Linea</label>
            <div class="col-2">
                <input class="form-control" id="line" type="text" 
                        value="@((ViewBag.SearchResult as ScrapSystem.Models.rejectCode)?.Line ?? "")" readonly/>
            </div>
            <label class="form-label col-auto">Turno</label>
            <div class="col-1">
                <input class="form-control" id="turno" type="text" 
                value="@((ViewBag.SearchResult as ScrapSystem.Models.rejectCode)?.Turno ?? "")" readonly/>
            </div>
            <label class="form-label col-auto">Defecto</label>
            <div class="col-3"> 
                <input type="text" class="form-control" id="defect"
                value="@((ViewBag.SearchResult as ScrapSystem.Models.rejectCode)?.Defect ?? "")" readonly/>
            </div>
        </div>
    <button type="submit" name="action" value="SearchBOM" class="btn btn-success">Buscar BOM</button>
    </form>
    
   @* Mostrar resultados de BOM*@
@if (ViewBag.BOMResults != null)
{

    var bomResults = (List<ScrapSystem.Models.BOM>)ViewBag.BOMResults;
    if (bomResults.Any())
    {
       <form asp-controller="Home" asp-action="RegistrarRechazo" method="post">
           <input type="hidden" name="rejectCode" value="@((ViewBag.SearchResult as ScrapSystem.Models.rejectCode)?.RejectID ?? "")"/>
           <input type="hidden" name="trwNumber" value="@((ViewBag.SearchResult as ScrapSystem.Models.rejectCode)?.trwNumber ?? "")"/>
           <input type="hidden" name="line" value="@((ViewBag.SearchResult as ScrapSystem.Models.rejectCode)?.Line ?? "")" />
           <input type="hidden" name="turno" value="@((ViewBag.SearchResult as ScrapSystem.Models.rejectCode)?.Turno ?? "")" />
           <input type="hidden" name="defect" value="@((ViewBag.SearchResult as ScrapSystem.Models.rejectCode)?.Defect ?? "")" />

            <div class=" mt-4">
                <h4>BILL OF MATERIALS - Selecciona componentes Faltantes a pieza :</h4>
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-dark">
                            <tr>
                                <th>Seleccionar</th>
                                <th>Numero Material</th>
                                <th>Descripcion Material</th>
                                <th>Unidad</th>
                                <th>Precio Unitario</th>
                                <th>Cantidad</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < bomResults.Count; i++)
                            {
                                <tr>
                                    <td>
                                        <input type="checkbox" name="componentesSeleccionados[@i].Seleccionado" value="true" class="form-check-input"/>
                                        <input type="hidden" name="componentesSeleccionados[@i].MaterialID" value="@bomResults[i].MaterialID"/>
                                        <input type="hidden" name="componentesSeleccionados[@i].MaterialNumber" value="@bomResults[i].MaterialNumber"/>
                                        <input type="hidden" name="componentesSeleccionados[@i].MaterialDescription" value="@bomResults[i].MaterialDescription"/>
                                    </td>
                                    <td>@bomResults[i].MaterialNumber</td>
                                    <td>@bomResults[i].MaterialDescription</td>
                                    <td>@bomResults[i].Unidad</td>
                                    <td>@bomResults[i].PrecioUnitario.ToString("F4")</td>
                                    <td>
                                        <input type="number" name="componentesSeleccionados[@i].Cantidad" value="1" min="1" max="100" class="form-control" style="width :80px;" />
                                    </td>
                                </tr>    
                            }
                        </tbody>
                    </table>
                </div>
                <div class="mt-3 d-flex justify-content-between align-items-center">
                    <div>
                        <strong>Total de materiales :@bomResults.Count</strong>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-danger btn-lg">Registrar Rechazo</button>
                    </div>
                </div>
            </div>
        </form>
    
    }
}



